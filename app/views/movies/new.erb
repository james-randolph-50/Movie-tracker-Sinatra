<h1>Add a Movie</h1>

<form action="/movies" method="POST">
  <label> Movie Name </label>
  <input type="text" name="Movie_Name"> </br>
  
  <label> Genres </label>
  <% Genre.all.each do |genre| %>
  <input id=<%= genre.name %>" type="checkbox" name="genre[]" value="<%= genre.id %>">
  <% end %>
  
  <input type="submit" value="Create">
  </form>